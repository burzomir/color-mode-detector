{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "jest",
    "prepare": "husky",
    "build": "npm run cleanup:dist && npm run build --workspaces",
    "cleanup:dist": "rm -rf .parcel-cache && rm -rf ./packages/*/dist",
    "cleanup:node": "rm -rf node_modules && rm -rf ./packages/*/node_modules"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.12.0",
    "@parcel/transformer-typescript-types": "^2.12.0",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.9",
    "process": "^0.11.10",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run format --workspaces",
      "npm run lint --workspaces"
    ],
    "src/**/*.tsx": [
      "npm run format --workspaces",
      "npm run lint --workspaces"
    ]
  }
}
